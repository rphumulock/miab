{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "lib":["es2015", "dom"],
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "devnotes",
    "webdev",
    "node",
    "prod",
    "pub",
    "jit",
    "aot"
  ],
  "awesomeTypescriptLoaderOptions": {
    "forkChecker": true,
    "useWebpackText": true
  },
  "outDir": "jit", 
  "rootDir": ".", 
  "compileOnSave": false, 
  "buildOnSave": false, 
  "atom": {
    "rewriteTsconfig": false
  }
}